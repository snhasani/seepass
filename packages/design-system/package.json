{
  "name": "@repo/design-system",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "sideEffects": false,
  "files": [
    "dist/**",
    "dist",
    "src/**"
  ],
  "main": "./dist/cjs/index.js",
  "module": "./dist/es/index.mjs",
  "types": "./dist/es/index.d.mts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/es/index.d.mts",
        "default": "./dist/es/index.mjs"
      },
      "require": {
        "types": "./dist/cjs/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    },
    "./styles.css": "./dist/styles.css",
    "./dynamic": {
      "import": {
        "types": "./dist/es/dynamic.d.mts",
        "default": "./dist/es/dynamic.mjs"
      },
      "require": {
        "types": "./dist/cjs/dynamic.d.ts",
        "default": "./dist/cjs/dynamic.js"
      }
    },
    "./src/*": "./src/*"
  },
  "scripts": {
    "build": "bunchee && pnpm build:css",
    "build:css": "cp src/styles.css dist/styles.css",
    "dev": "bunchee --watch",
    "check-types": "tsc --noEmit",
    "lint": "eslint src/",
    "test": "jest"
  },
  "jest": {
    "preset": "@repo/jest-presets/browser"
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-progress": "^1.1.4",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.1.7",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-tooltip": "^1.2.8",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.29.2",
    "lucide-react": "^0.563.0",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@repo/eslint-config": "workspace:*",
    "@repo/jest-presets": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^22.15.3",
    "bunchee": "^6.4.0",
    "eslint": "^9.39.0",
    "jest": "^29.7.0",
    "typescript": "5.9.3"
  },
  "peerDependencies": {
    "@types/react": ">=18",
    "@types/react-dom": ">=18",
    "react": ">=18",
    "react-dom": ">=18"
  }
}
